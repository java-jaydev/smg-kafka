# SMG Kafka 테스트 환경 설정
NODE_ENV=test
API_PORT=3001
LOG_LEVEL=error

# 테스트 데이터베이스 설정
DATABASE_URL="postgresql://smguser:smgpassword@localhost:5433/smg_kafka_test"

# 테스트 Kafka 설정
KAFKA_BROKERS="localhost:9093"
KAFKA_CLIENT_ID="smg-kafka-test-client"
KAFKA_GROUP_ID="smg-kafka-test-group"

# 테스트용 보안 설정
JWT_SECRET="test-jwt-secret-key"
API_RATE_LIMIT=10000

# 테스트용 모니터링 설정
METRICS_ENABLED=false
HEALTH_CHECK_INTERVAL=60000

# 테스트용 알림 설정 (모두 비활성화)
NOTIFICATION_EMAIL_ENABLED=false
SLACK_WEBHOOK_URL=""