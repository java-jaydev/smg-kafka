{
  "name": "smg-kafka",
  "version": "1.0.0",
  "description": "Node.js Kafka 데이터 파이프라인 프로젝트",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/api/index.ts",
    "dev:producer": "tsx watch src/producer/index.ts",
    "dev:consumer": "tsx watch src/consumer/index.ts",
    "dev:api": "tsx watch src/api/index.ts",
    "start": "node dist/api/index.js",
    "start:producer": "node dist/producer/index.js",
    "start:consumer": "node dist/consumer/index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["kafka", "nodejs", "typescript", "postgresql", "docker"],
  "author": "SMG Kafka Team",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "kafkajs": "^2.2.0",
    "prisma": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}